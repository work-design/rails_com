<%= render layout: 'layouts/admin_head' do %>
  <main class="columns">
    <div class="column is-narrow p-0 display-flex flex-direction-column">
      <div id="admin_menu" class="flex-grow-1">
        <%= render 'admin/nav' %>
      </div>
      <div class="flex-shrink-0">
        <%= render 'admin/menu_bar' %>
      </div>
    </div>
    <turbo-frame id="body" refresh="morph" data-turbo-action="advance" autoscroll data-autoscroll-block="start" class="column pt-0">
      <%= render 'admin/nav_bar' %>
      <%= render 'alert' %>
      <%= yield %>
    </turbo-frame>
  </main>
<% end %>
