<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title>管理后台</title>
    <meta name="turbolinks-cache-control" content="no-preview">
    <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= css_load media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= js_ready 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <%= render 'nav_bar' %>
    <main class="ui inverted side">
      <div class="sidebar" style="width:260px;">
        <%= render 'nav' %>
      </div>
      <div class="content">
        <% if content_for?(:breadcrumb) %>
          <%= yield(:breadcrumb) %>
        <% else %>
          <%= render 'breadcrumb' %>
        <% end %>
        <%= yield %>
      </div>
    </main>
    <div id="modal"></div>
    <%= js_load %>
    <%= javascript_include_tag 'footer' %>
  </body>
</html>

