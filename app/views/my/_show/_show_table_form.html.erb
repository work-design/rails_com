<%= form_with theme: 'inline', url: { action: 'update' }, method: :patch, data: { controller: 'single-form' }, id: 'bottom-field', class: 'form-bottom invisible p-2' do |f| %>
  <div class="field is-grouped">
    <div class="control is-expanded">
      <input type="text" data-single-form-target="input" class="input is-small">
    </div>
    <div class="control">
      <%= f.submit %>
    </div>
  </div>
<% end %>