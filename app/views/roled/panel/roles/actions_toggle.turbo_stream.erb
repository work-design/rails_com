<%= turbo_stream.replace "tr_#{@meta_controller.identifier}", partial: 'show_controller', locals: { meta_controller: @meta_controller, expand: true } %>
<% if params[:expand].present? %>
  <% @meta_controller.meta_actions.each do |meta_action| %>
    <%= turbo_stream.replace "tr_#{meta_action.identifier}", partial: 'show_action', locals: { meta_action: meta_action, hide: true } %>
  <% end %>
<% else %>
  <%= turbo_stream.after "tr_#{@meta_controller.identifier}", partial: 'show_action', collection: @meta_controller.meta_actions, as: :meta_action %>
<% end %>
<%=
  turbo_stream.replace(
    @meta_controller.meta_namespace.tr_id(@meta_controller.business_identifier),
    partial: 'show_namespace',
    locals: { meta_namespace: @meta_controller.meta_namespace, business_identifier: @meta_controller.business_identifier, expand: true }
  )
%>
<%= turbo_stream.replace @meta_controller.meta_business.tr_id, partial: 'show_business', locals: { meta_business: @meta_controller.meta_business, expand: true } %>
