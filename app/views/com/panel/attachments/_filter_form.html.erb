<%= form_with theme: 'search', model: ActiveStorage::Attachment.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :record_type %>
    <%= f.text_field :record_id %>
    <%= f.text_field :name %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:record_type, :record_id, :name]), class: 'button is-light' %>
    </div>
  </div>
<% end %>


