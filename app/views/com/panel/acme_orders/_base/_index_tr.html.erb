<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'acme_identifiers', acme_order_id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= button_to({ action: 'order', id: model.id }, method: :patch, aria: { label: t('.order') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-shopping-cart has-text-success"></i>
      <% end %>
      <%= button_to({ action: 'verify', id: model.id }, method: :patch, aria: { label: t('.verify') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-check has-text-warning-dark"></i>
      <% end %>
      <%= button_to({ action: 'cert', id: model.id }, method: :patch, aria: { label: t('.cert') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-certificate"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>
