<%= form_with theme: 'search', model: AcmeOrder.new do |f| %>
  <div class="field-body">
    <%= f.text_field 'acme_account.email' %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: ['acme_account.email']), class: 'button is-light' %>
    </div>
  </div>
<% end %>
