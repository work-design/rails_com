<tr id="tr_<%= meta_action.identifier %>" data-controller="tree-remote" data-tree-remote-target="item">
  <td>
    <span style="width: 4.29em; display: inline-block"></span>
    <i class="fas fa-fw fa-minus"></i>
    <span><%= meta_action.name %></span>
    <span class="has-text-grey"><%= meta_action.action_name %></span>
  </td>
  <td>
    <%= form_with theme: nil, model: meta_action, url: { controller: 'meta_actions', action: 'update', meta_controller_id: params[:meta_controller_id], id: meta_action.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :landmark, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
      <label data-action="click->input#check"></label>
    <% end %>
  </td>
</tr>
