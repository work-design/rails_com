<div>
<% meta_controller.meta_actions.each do |meta_action| %>
  <span><%= meta_action.name %></span>
  <span class="has-text-grey"><%= meta_action.action_name %></span>
  <%= form_with theme: nil, model: meta_action, url: { controller: 'meta_actions', action: 'update', meta_controller_id: meta_controller.id, id: meta_action.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :landmark, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
<% end %>
</div>
