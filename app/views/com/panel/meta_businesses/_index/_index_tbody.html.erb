<td>
  <div class="is-several">
    <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
    <%= link_to model.name, { action: 'show', id: model.id }, text: true %>
    <%= button_to({ action: 'move_higher', id: model.id }, method: :patch, data: { 'show-target': 'item' }, style: 'visibility: hidden') do %>
      <i class="fa-regular fa-arrow-up"></i>
    <% end %>
    <%= button_to({ action: 'move_lower', id: model.id }, method: :patch, data: { 'show-target': 'item' }, style: 'visibility: hidden') do %>
      <i class="fa-regular fa-arrow-down"></i>
    <% end %>
  </div>
</td>
