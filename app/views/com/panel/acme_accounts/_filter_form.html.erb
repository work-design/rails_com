<%= form_with theme: 'search', model: Com::AcmeAccount.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :email %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:email]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
