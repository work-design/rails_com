<% if params[:value].is_a?(ActionController::Parameters) %>
  <div class="field-body">
    <div class="field">
      <%=
        datetime_field_tag(
          params[:scope].present? ? "#{params[:scope]}[#{@meta_column.column_name}-gte]" : "#{@meta_column.column_name}-gte",
          params.dig('value', 'gte'),
          placeholder: "请输入#{@meta_column.i18n_name}",
          data: { action: 'filter-input#confirm' },
          class: 'input',
          form: 'filter_search_form'
        )
      %>
    </div>
    <div class="field">
      <%=
        datetime_field_tag(
          params[:scope].present? ? "#{params[:scope]}[#{@meta_column.column_name}-lte]" : "#{@meta_column.column_name}-lte",
          params.dig('value', 'lte'),
          placeholder: "请输入#{@meta_column.i18n_name}",
          data: { action: 'filter-input#confirm' },
          class: 'input',
          form: 'filter_search_form'
        )
      %>
    </div>
    <div>
      <%= submit_tag '确认', data: { action: 'filter-input#submit' }, class: 'button is-small', form: 'filter_search_form' %>
    </div>
  </div>
<% else %>
  <div class="field-body">
    <div class="field">
      <%=
        datetime_field_tag(
          params[:scope].present? ? "#{params[:scope]}[#{params[:column_name]}]" : params[:column_name],
          params[:value],
          data: { action: 'filter-input#confirm' },
          class: 'input',
          form: 'filter_search_form'
        )
      %>
    </div>
    <div>
      <%= submit_tag '确认', data: { action: 'filter-input#submit' }, class: 'button is-small', form: 'filter_search_form' %>
    </div>
  </div>
<% end %>