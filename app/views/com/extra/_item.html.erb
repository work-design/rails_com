<% model.form_parameters.each_with_index do |parameter, index| %>
  <%= f.fields :parameters, model: parameter, index: index, label: nil, placeholder: true, all: { normal: nil, select: nil }, wrap: { input: 'field > control', select: 'field is-narrow > control > select is-fullwidth' } do |pf| %>
    <div data-controller="field" data-field-index-value="<%= index %>" class="field is-horizontal">
      <%= f.label :form_parameters, '参数' %>
      <div class="field-body">
        <%= pf.text_field :column, value: parameter.key, autocomplete: 'off' %>
        <%= pf.select :value, options_for_select(DefaultForm.config.mapping.keys, parameter.value) %>
        <div class="field flex align-items-center">
          <i data-action="click->field#add" class="fa-solid fa-plus clickable"></i>
          <i data-action="click->field#remove" class="fa-solid fa-minus clickable ml-1"></i>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
