<% f_method = "#{outer}_ancestors(#{depth}i)" %>
<div class="field is-narrow control" id="<%= "#{f_method}_input" %>" data-controller="taxon" data-taxon-url-value="nodes/outer" data-taxon-title-value="outer_ancestors_input" data-taxon-params-value="<%= { node_type: node.class.base_class.name, index: f.index, scope: f.object_name, method: f_method, outer: outer }.compact.to_json %>">
  <%= f.collection_select(f_method, node.children, :id, :name, { selected: node.id, include_blank: true, label: false, wrap: { all: nil, select: 'select is-fullwidth' } }, { data: { action: 'taxon#choose' } }) %>
</div>
