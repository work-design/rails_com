<% f_method = "parent_ancestors(#{node.depth}i)" %>
<div class="field is-narrow control" id="<%= "#{f_method}_input" %>" data-title="parent_ancestors_input">
  <div class="select is-fullwidth">
  <%=
    f.collection_select(
        f_method,
        node.self_and_siblings,
        :id,
        :name,
        { selected: node.id, include_blank: true, can: { label: false, wrap_all: false, wrap_select: false } },
        { data: { type: node.class.base_class.name, index: f.index, method: f_method, controller: 'taxon', action: 'taxon#choose' } }
    )
  %>
  </div>
</div>
