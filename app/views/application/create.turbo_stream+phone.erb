<% if referer_controller == controller_path %>
  <%= turbo_stream.append 'tbody', partial: 'index_item', layout: 'index_item_actions', locals: { model: defined?(model) ? model : instance_variable_get("@#{model_name}") } %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.append 'body', partial: 'visit' %>
<% end %>
