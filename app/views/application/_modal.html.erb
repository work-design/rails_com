<div data-controller="modal" id="modal" class="modal is-active">
  <div class="modal-background has-animate-color"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= t('.title') %></p>
      <button class="delete" data-action="modal#close"></button>
    </header>
    <div class="modal-card-body">
      <%= yield %>
    </div>
    <%= render 'modal_foot' %>
  </div>
</div>
