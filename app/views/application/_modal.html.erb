<div data-controller="modal" id="modal" class="modal">
  <div class="has-background-white has-animate-color" data-modal-target="background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= t('.title') %></p>
      <button class="delete" data-action="modal#close"></button>
    </header>
    <div class="modal-card-body">
      <%= yield %>
    </div>
  </div>
</div>
