<div class="dropdown is-right is-hoverable">
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu4">
      <span>25 条</span>
      <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu">
    <div class="dropdown-content">
    <% [25, 50, 100].each do |number| %>
      <%= link_to "#{number} / 页", filter_params(per: number), class: active_helper(per: number, active: 'dropdown-item is-active', item: 'dropdown-item') %>
    <% end %>
    </div>
  </div>
</div>
<div>
  <% if instance_variable_get("@#{pluralize_model_name}").respond_to?(:total_pages) %>
  <span><%= instance_variable_get("@#{pluralize_model_name}").total_pages %></span>
  <span>/</span>
  <span><%= instance_variable_get("@#{pluralize_model_name}").total_count %></span>
  <% end %>
</div>
