<% if rails_role_user.any_role?('active_storage_ext/admin') %>
<div class="item">
  <a class="<%= active_helper(controllers: ['blob_defaults', 'blobs', 'attachments'], active_class: 'title active', item_class: 'title') %>">
    <i class="fas fa-images fa-fw"></i>
    <span>资源</span>
    <i class="dropdown icon"></i>
  </a>
  <div class="<%= active_helper(controllers: ['blob_defaults', 'blobs', 'attachments'], active_class: 'menu content active', item_class: 'menu content') %>">
    <%= link_to '默认', admin_blob_defaults_path, class: active_helper(controllers: 'blob_defaults') %>
    <%= link_to 'blobs', admin_blobs_path, class: active_helper(controllers: 'blobs') %>
    <%= link_to 'attachments', admin_attachments_path, class: active_helper(controllers: 'attachments') %>
  </div>
</div>
<% end %>
