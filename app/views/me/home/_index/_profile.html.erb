<table class="table as-show is-fullwidth">
  <tr>
    <td>组织角色</td>
    <td>
    <% current_organ.roles.each do |role| %>
      <span class="tag"><%= role.name %></span>
    <% end %>
    </td>
  </tr>
  <tr>
    <td>用户角色</td>
    <td>
    <% current_member.roles.each do |role| %>
      <span class="tag"><%= role.name %></span>
    <% end %>
    </td>
  </tr>
  <tr>
    <td colspan="2" class="text-centered">
      <%= link_to({ controller: '/admin/home' }, class: 'button is-small is-primary') do %>
        <i class="fa-solid fa-cogs"></i>
        <span class="pl-1"><%= t('admin.home.index.title') %></span>
      <% end %>
    </td>
  </tr>
</table>
