<div class="dropdown is-hoverable pop-right p-3">
  <div class="dropdown-trigger">
    <%= image_tag current_member.avatar, class: 'image is-64x64' if current_member.avatar.present? %>
    <span><%= current_member.name %></span>
  </div>
  <div class="dropdown-menu">
    <div class="dropdown-content">
      <%= link_to({ controller: '/me/home', **current_organ.admin_url_options(request, auth_token: current_authorized_token.id) }, class: 'dropdown-item') do %>
        <span><%= t('me.home.index.title') %></span>
      <% end %>
      <%= link_to({ debug_mode: true }, class: 'dropdown-item') do %>
        <span>Debug Mode</span>
      <% end %>
      <%= link_to({ controller: 'org/board/members', action: 'logout' }, data: { turbo_confirm: '确认退出' }, class: 'dropdown-item') do %>
        <span><%= t('org.board.members.logout.title') %></span>
      <% end %>
    </div>
  </div>
</div>
